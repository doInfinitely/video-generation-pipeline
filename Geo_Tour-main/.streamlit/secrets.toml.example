# Streamlit Secrets Configuration
# Copy this file to secrets.toml and fill in your API keys
# For Streamlit Cloud: Add these secrets in the app settings (https://share.streamlit.io/)

# OpenAI API Key (required)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY = "sk-..."

# Replicate API Key (required)
# Get your key from: https://replicate.com/account/api-tokens
REPLICATE_API_KEY = "r8_..."

# Optional: Alternative name for Replicate key
# VIDEO_API_KEY = "r8_..."

# Google Gemini API Key (optional - for matplotlib diagram generation)
# Get your key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY = "..."
# GOOGLE_API_KEY = "..."  # Alternative name

# ElevenLabs API Key (optional - for text-to-speech)
# Get your key from: https://elevenlabs.io/
ELEVENLABS_API_KEY = "..."
# TTS_API_KEY = "..."  # Alternative name
